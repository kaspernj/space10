<div class="manage-user">
<div class="row">
  <div class="col-md-3">
    <h2><%= user.name %></h2>
  </div>
  <div class="col-md-8">
    <div class="row">
      <%= simple_form_for user, remote: true, authenticity_token: true do |f| %>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.simple_fields_for :personal_profile do |profile| %>
              <div class="file_upload">
                <%= image_tag profile.object.image_url(:medium), class: "image_preview full_width" %>
                
                <%= profile.file_field :image, class: "upload upload_image" %>
                <%= profile.hidden_field :image_cache %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-md-4">
          <%= f.input :name, label: false, placeholder: 'Name' %>
          <%= f.input :email, label: false, placeholder: 'Email' %>
          <%= f.input :password, label: false, placeholder: "Change password" %>
        </div>
        <div class="col-md-4">
          <%= f.simple_fields_for :personal_profile do |profile| %>
            <%= profile.input :location, label: false, placeholder: 'Location' %>
            <%= profile.input :description, label: false, placeholder: 'Bio' %>
          <% end %>
          <%= f.button :submit, "Save", class: 'btn btn-default' %>
          <div class="loading-indicator" style="display:none;"><i class="fa fa-spinner fa-pulse"></i></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row content_block">
  <div class="col-md-3">
    <h2>My <br>Events</h2>
  </div>
  <div class="col-md-8">
    <div class="row">
      <% user.events.each do |event| %>
        <div class="col-md-4">
          <div class="thumbnail">
            <div class="aspect-ratio r-16-9">
              <div class="centered_container background-cover" style="background-image: url('<%= event.featured_image_url(:medium) %>');">
                <span class="centered btn btn-inverse">
                  <%= user.registrations.find_by(event: event).confirmation_status.capitalize %>
                </span>
              </div>
            </div>
            <div class="caption">
              <h4><%= event.title %></h4>
            </div>
          </div>
        </div>
      <% end %>
      <% if user.events.empty? %>
        <div class="col-md-12">
          <p >
            You have not registered for any events. <%= link_to "See what's upcomming up.", events_path %>.
          </p>        
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>