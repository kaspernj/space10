        <% if signed_in? %>
          <li>
            <%= link_to edit_user_path(current_user), {remote: true, data: {toggle: "modal", target: "#modal-fullscreen"}} do %>
              <%= current_user.first_name %>
              &nbsp;<%= image_tag current_user.personal_profile.image_url(:thumbnail), width: '22', class: 'img-circle' %>
            <% end %>
          </li>
        <% else %>
          <li><%= link_to "<i class='icon-fingerprint'></i> Sign up".html_safe, new_user_path, {remote: true, data: {toggle: "modal", target: "#modal-fullscreen"}} %></li>
        <% end %>
