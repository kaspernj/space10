<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag 'logos/logo.svg', height: "114", width: '94', id: 'svg_logo', class: 'hidden-xs' %>
        <%= image_tag 'logos/logo_wo_text.svg', width: '60', class: 'visible-xs-block' %>
        <%= image_tag 'logos/logo.gif', height: "114", width: '94', id: 'gif_logo', style: "display:none;" %>
      <% end %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav navbar-left hidden-xs hidden-sm">
        <% if signed_in? %>
