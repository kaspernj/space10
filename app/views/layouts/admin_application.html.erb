<!DOCTYPE html>
<html lang="en">
<%= render 'layouts/easteregg' %>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "Space10" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <div class="container" id="admin_container">
      <div class="row">
        <div class="col-md-2">
          <%= render 'admin/layouts/nav' %>
        </div>
        <div class="col-md-10">
          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, id: "flash_#{name}", class: "flash_#{name}" %>
          <% end %>
          <%= yield %>
        </div>
      </div>
      
    </div>

  </body>
</html>
