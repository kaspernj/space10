<div class="bg-gray community-controls">
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<p>Filter/Sort</p>
			</div>
			<%= search_form_for @q, class: 'auto_submit' do |f| %>
				<div class="col-md-4">
					<div class="form-group">
						<div class="form-select">
							<%= f.collection_select :tags_id_eq, Tag.all, :id, :title, {include_blank: 'Show all'}, {class: 'form-control'} %>
							<span class="caret"></span>
						</div>
					</div>
				</div>
				<div class="col-md-4">
				</div>
			<% end %>
		</div>
	</div>
</div>
<div class="bg-black">
	<div class="container">
		<div class="row community-profiles">
			<% @profiles.each do |profile| %>
				<div class="col-md-3 col-xs-6">
					<%= link_to profile_path(profile) do %>
						<%= image_tag profile.image_url(:medium), class: "full_width" %>
						<h4><%= profile.title %></h4>
						<p class="meta-text"><%= profile.tags.any? ? profile.tags.pluck(:title).join(" / ") : nil %></p>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>
<div class="bg-gray community-controls">
	<div class="container">
		<div class="row text-center">
			<%= will_paginate @profiles, :previous_label => 'Previous', :next_label => 'Next' %>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 join-us text-center">
			<h1>Join Space 10</h1>
			<p class="lead"><strong>Mattis mauris id mauris luctus, non cursus leo dapibut eget henmagna, ut bibendum leo. Donec quam nunc.</strong></p>
			<%= link_to "Sign up", new_user_path, class: "btn btn-lg btn-default" %> <%= link_to "Log in", login_path, class: "btn btn-lg btn-default" %>
		</div>
	</div>
</div>