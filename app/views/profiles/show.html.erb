<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="row community-profile">
				<div class="col-xs-8 col-md-6">
					<div class="panel panel-default ">
						<div class="panel-body">
							<div class="aspect-ratio r-1-1">
								<div><%= image_tag @profile.image_url(:medium) %></div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-xs-12 col-md-6">
					<p><strong><i class="fa fa-map-marker"></i> <%= @profile.location %></strong></p>
					<h1><%= @profile.title %></h1>
					<p class="meta-text"><%= @profile.tags.pluck(:title).join(" / ") %></p>
					<p class="profile-description"><%= @profile.description %></p>
					<% if @profile.website.present? %>
						<%= link_to 'Visit website', @profile.website, target: '_blank', class: 'btn btn-lg btn-default' %>
					<% end %>
				</div>
			</div>
		</div>
	</div> 
</div>
<%= render 'community' %>