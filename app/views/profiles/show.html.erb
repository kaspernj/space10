<% content_for :title, @profile.title %>

<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-2">
			<div class="row community-profile">
				<div class="col-xs-8 col-xs-offset-1 col-sm-offset-0 col-md-5">
					<div class="panel panel-default ">
						<div class="panel-body">
							<div class="aspect-ratio r-1-1">
								<div><%= image_tag @profile.image_url(:medium) %></div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-xs-12 col-md-7">
					<p class="profile-location"><strong><i class="fa fa-lg fa-fw fa-map-marker"></i> <%= @profile.location %></strong></p>
					<h1><%= @profile.title %></h1>
					<p class="profile-tags meta-text"><%= @profile.tags.pluck(:title).unshift(@profile.try(:tagline)).reject(&:blank?).join(" / ") %></p>
					<div class="row">
						<div class="col-md-7">
							<p class="profile-description"><%= @profile.description %></p>
						</div>
					</div>
					<% if @profile.website.present? %>
						<%= link_to 'Visit website', prepend_http(@profile.website), target: '_blank', class: 'btn btn-lg btn-default' %>
					<% end %>
					<% if @profile.email.present? %>
						<%= link_to 'Get in touch', new_message_path(profile_id: @profile.id), {remote: true, data: {toggle: "modal", target: "#modal-fullscreen"}, class: 'btn btn-lg btn-default'} %>
					<% end %>
				</div>
			</div>
		</div>
	</div> 
</div>
<%= render 'community' %>