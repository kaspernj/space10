<%= link_to event do %>
  <%= image_tag event.image_attachments.first.image_url(:medium), class: "full_width" %>
<% end %>
<div class="row">
	<div class="col-xs-7 col-md-6 event-info-primary">
		<h3><%= link_to event.title, event, class: 'heading' %></h3>
		<%= link_to "Read more", event, class: "btn btn-lg btn-default" %>
	</div>
	<div class="col-xs-4 col-md-3 event-info-secondary pull-right">
		<p class="event-date"><%= event.starts_at.strftime("%d") %></p>
		<p class="date"><%= event.starts_at.strftime("%B") %></p>
	</div>
</div>