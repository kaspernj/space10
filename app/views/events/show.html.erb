<div class="row">
	<div class="col-md-12 event-image">
		<%= image_tag 'test-image.jpg', width: '100%' %>
	</div>
</div>
<div class="row">
	<div class="col-md-8 event-heading"><h1><%= @event.title %></h1></div>
</div>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<p class="event-excerpt"><%= @event.excerpt %></p>
	</div>
</div>
<div class="vertical-divider"></div>
<div class="row">
	<div class="col-md-6 col-md-offset-2">
		<p><%=raw @event.content %></p>
	</div>
	<div class="col-md-4">
		<p class="event-date"><%= @event.starts_at.strftime("%d") %></p>
		<p class="event-month"><%= @event.starts_at.strftime("%B") %></p>
	</div>
</div>
<div class="row">
	<div class="col-md-10 col-md-offset-2">
		<%= link_to "Attend event", new_event_registration_path(@event), class: 'btn btn-lg btn-default' %>
	</div>
</div>