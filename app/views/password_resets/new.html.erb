<div class="centered_cover">
<div class="centered_container underline-links">
  <div class="centered">
    <div class="container">
      <div class="row login-content">
        <div class="col-sm-6 col-md-3 text-center">
          <%= link_to root_path, class: 'no-link-style' do %>
            <%= image_tag 'logos/text-logo.svg' %>
          <% end %>
          <p class="meta-text">Fill in your email and hit "Reset password"</p>
          <%= form_tag password_resets_path, method: :post do |f| %>
            <div class="form-group">
              <%= label_tag :email %>
              <%= text_field_tag :email, params[:email], placeholder: 'your@email.com', class: "form-control" %>
            </div>
            <div class="form-group">
              <%= submit_tag "Reset password", class: "btn btn-default" %>
            </div>
            <p><%= link_to "Go back", :back %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>