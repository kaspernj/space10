<fieldset class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= f.hidden_field :_destroy, class: 'destroy' %>
      <%= f.label :person_id, 'Project person' %>
      <a href="#" class="remove_fields pull-right" >&times;</a>
    </h3>
  </div>
  <div class="panel-body">
    <%= f.select :person_id, PersonalProfile.published.pluck(:title,:id), {include_blank: "Select person"}, {class: 'form-control'} %>
  </div>
</fieldset>