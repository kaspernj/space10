<fieldset class="panel panel-default sortable_item">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= f.hidden_field :_destroy, class: 'destroy' %>
      <i class="fa fa-bars handle"></i> Quote block
      <a href="#" class="remove_fields pull-right" >&times;</a>
    </h3>
  </div>
  <div class="panel-body">
    <%= f.hidden_field :row_order, class: 'row_order' %>
    <%= f.fields_for :quote_attachment, (f.object.quote_attachment || f.object.send('build_quote_attachment')) do |builder| %>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= builder.label :quote %>
          <%= builder.text_area :quote, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= builder.label :author %>
          <%= builder.text_field :author, class: 'form-control' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</fieldset>