<% provide(:title, "All Posts") %>
<div class="row">
	<div class="col-md-8">
		<h2>All Posts</h2>
	</div>
	<div class="col-md-4 text-right">
		<%= link_to "New post", new_admin_post_path, class: 'btn btn-sm btn-default' %>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="table-responsive">
  		<table class="table">
  			<thead>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Updated at</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        	<% @posts.each do |post| %>
	          <tr>
	            <th scope="row"><%= post.id %></th>
	            <td><%= link_to post.title, admin_post_path(post) %></td>
	            <td><%= post.updated_at.to_s(:formatted) %></td>
	            <td class="text-right">
	            	<%= link_to '<i class="fa fa-fw fa-eye"></i>'.html_safe, post %>
	            	<%= link_to '<i class="fa fa-fw fa-pencil"></i>'.html_safe, edit_admin_post_path(post) %>
	            	<%= link_to '<i class="fa fa-fw fa-trash"></i>'.html_safe, admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
	            </td>
	          </tr>
	        <% end %>
        </tbody>
  		</table>
  	</div>
	</div>
</div>