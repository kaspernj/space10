<% provide(:title, "New profile") %>
<div class="row">
	<div class="col-md-12">
		<h2>New profile</h2>
		<%= form_for @profile, url: admin_profiles_path, html: { multipart: true } do |f| %>
			
			<%= render 'form_fields', f: f %>

			<%= f.submit 'Create profile', class: 'btn btn-default' %>
			
		<% end %>
	</div>
</div>