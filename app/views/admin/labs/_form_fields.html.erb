<% if @lab.errors.any? %>
	<div class="alert alert-danger">
		<p>Oops! Something went wrong. Try again!</p>
		<ul>
	  	<% @lab.errors.full_messages.each do |msg| %>
		    <li><%= msg %></li>
		  <% end %>
		</ul>
	</div>
<% end %>
<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :subtitle %>
	<%= f.text_field :subtitle, class: "form-control" %>
</div>
<div class="row">
	<div class="col-md-6">
		<div class="form-group">
	<%= f.label :starts_at %>
	<div class="input-group">
			<%= f.datetime_field :starts_at, value: (@lab.starts_at.blank? ? '' : @lab.starts_at.to_s(:formatted)), placeholder: "#{DateTime.now.to_s(:formatted)}", class: "form-control datetimepicker" %>	
			<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
		</div>
	</div>
	
	</div>
	<div class="col-md-6">
		<div class="form-group">
			<%= f.label :ends_at %>
			<div class="input-group">
				<%= f.datetime_field :ends_at, value: (@lab.ends_at.blank? ? '' : @lab.ends_at.to_s(:formatted)), class: "form-control datetimepicker" %>	
				<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			</div>
		</div>
	</div>
</div>
<hr>
<div class="form-group">
	<div class="checkbox">
		<%= label_tag do %>
			<%= f.check_box :published, id: "published" %> Publish
		<% end %>
	</div>
</div>