<div class="thumbnail">
	<%= link_to post do %>
		<%= image_tag nil, {class: 'lazyload', data: {src: post.image_attachments.first.image_url(:medium)}} %>
		<div class="caption">
			<p class="meta-text"><%= post.tags.pluck("title").join(" / ") %></p>
			<h3><%= post.title %></h3>
			<p><%= truncate(post.excerpt, length: 230) %></p>
			<p class="meta-text">&mdash; <%= time_ago_in_words post.publish_at %> ago</p>
		</div>	
	<% end %>
</div>