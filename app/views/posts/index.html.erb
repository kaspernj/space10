<div class="container-align-left">
	<div class="row">
		<div class="col-md-12">
			<div class="slick-variable-width" data-slick='{"slidesToShow": 1, "slidesToScroll": 1}'>
				<% @posts.limit(3).each do |post| %>
					<%= link_to post do %>
						<%= image_tag post.image_attachments.first.image, height: "500" %>
						<h2><%= post.title %></h2>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="row content_block">
				<% @posts.offset(3).limit(2).each do |post| %>
					<div class="col-md-6 post-thumbnail">
						<%= render 'thumbnail', post: post %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="row content_block">
				<% @posts.offset(5).limit(3).each do |post| %>
					<div class="col-md-4 post-thumbnail">
						<%= render 'thumbnail', post: post %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<div class="bg-gray">
	<div class="container">
		<div class="row content_block">
			<div class="col-md-10 col-md-offset-1">
				<div class="row">
					<div class="col-md-12">
						<h3>#<%= Settings.get['posts']['index']['featured_tag'] %></h3>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% if VideoBlock.any? %>
<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<%= render 'posts/video_block', object: VideoBlock.last %>
		</div>
	</div>
</div>
<% end %>
<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="row content_block">
				<% @posts.offset(8).limit(2).each do |post| %>
					<div class="col-md-6 post-thumbnail">
						<%= render 'thumbnail', post: post %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-12 instagram-row">
			<% @instagram_photos.first(4).each do |photo| %>
				<%= link_to photo["link"], class: 'instagram_photo',target: '_blank' do %>
					<%= image_tag photo["images"]["standard_resolution"]["url"] %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="row content_block">
				<% @posts.offset(7).limit(3).each do |post| %>
					<div class="col-md-4 post-thumbnail">
						<%= render 'thumbnail', post: post %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>