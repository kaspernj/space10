<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 content_block">
			<h1><%= @post.title %></h1>
		</div>
	</div>
</div>
<div class="container-align-left">
	<div class="row">
		<div class="col-md-12 content_block">
			<div class="slick-variable-width" data-slick='{"slidesToShow": 1, "slidesToScroll": 1}'>
				<% @post.image_attachments.each do |attachment| %>
					<div><%= image_tag attachment.image, height: "500" %></div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-2 content_block">
			<p class="date"><%= @post.publish_at.to_date.to_s(:formatted) %></p>
		</div>
		<div class="col-md-8 content_block">
			<div class="row">
				<div class="col-md-12">
					<p class="excerpt"><%= @post.excerpt %></p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 text_block">
					<%= @post.content.html_safe %>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<% @post.content_blocks.each do |content_block| %>
		<%= render "posts/#{content_block.type.underscore}", object: content_block %>
	<% end %>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="row">
				<hr>
				<% @posts.each do |post| %>
					<div class="col-md-4">
						<%= render 'posts/thumbnail', post: post %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>