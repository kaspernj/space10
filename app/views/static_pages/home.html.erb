<% if @posts.any? && @current_lab.present? %>
<div class="container">
	<div class="row">
		<div class="col-md-11 col-md-offset-1">
			<div class="row">
				<div class="col-sm-8 col-sm-push-4 no-padding">
					<%= image_tag 'frontpage_image.jpg', class: "full_width" %>
				</div>
				<div class="col-sm-4 col-sm-pull-8">
					<h1 class="heading">A future-living lab<br> and exhibition space</h1>
				</div>
			</div>
		</div>
	</div>
	<div class="row content_block">
		<div class="col-sm-7 col-sm-offset-1 content_block space-description">
			<p class="lead"><strong>Space10 is located in the heart of Copenhagen. A space for exploration and inspiration rooted in the idea that together we can co-create a better everyday life for the many people.</strong></p>
		</div>
		<div class="col-sm-4 content_block text-center current-lab">
			<p class="meta-text"><%= @current_lab.current? ? "Currently exploring" : "Upcoming lab" %></p>
			<p class="lead"><strong><%= @current_lab.title %></strong></p>
			<p class="meta-text"><%= @current_lab.timespan.html_safe %></p>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="row content_block">
				<div class="col-md-12 text-center">
					<h2>Space Journal <span>Latest</span></h2>
				</div>
				<div class="row">
				<% @posts.each_with_index do |post, i| %>
					<div class="col-sm-6 col-md-4 post-thumbnail">
						<%= render 'posts/thumbnail', post: post %>
					</div>
				<% end %>
				</div>
			</div>
			<div class="row text-center">
				<%= link_to "View all", posts_path, class: 'btn btn-lg btn-default' %>
			</div>
		</div>
	</div>
</div>

<% if @instagram_photos %>
	<div class="container">
		<div class="row content_block">
			<div class="col-md-12 content_block instagram-row">
				<% @instagram_photos.first(6).each do |photo| %>
					<%= link_to photo["link"], class: 'col-xs-6 col-md-2 instagram-photo-container', target: '_blank' do %>
						<% photo_url = photo["images"]["standard_resolution"]["url"] %>
						<div class="instagram-photo aspect-ratio r-1-1" style="background-image: url('<%= photo_url %>');"></div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center">
			<h2>Space Program <span>Upcoming</span></h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="row content_block">
				<% @events.each_with_index do |event, i| %>
					<div class="col-sm-6 event-small">
						<%= render 'events/event_small', event: event %>
					</div>
				<% end %>
				<% if @events.empty? %>
					<div class="col-md-12 text-center">
						<p class="lead">
							No upcoming events. Stay tuned.
						</p>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<hr>
	<div class="row">
		<div class="col-md-12 text-center">
			<h2>Latest Collaborators</span></h2>
		</div>
	</div>
	<div class="row content_block">
		<% @profiles.each do |profile| %>
			<div class="col-xs-6 col-sm-3">
				<%= render 'profiles/profile_card', profile: profile %>
			</div>
		<% end %>
	</div>
</div>
<% end %>